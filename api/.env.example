# Rapture Twelve API Environment Configuration
# Copy this file to .env and configure with your actual values

# Server Configuration
NODE_ENV=development
PORT=3000

# CORS Configuration (comma-separated list of allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,https://rapturetwelve.com,https://www.rapturetwelve.com

# Email Configuration
FROM_EMAIL=noreply@rapturetwelve.com

# Choose ONE email service configuration:

# Option 1: SendGrid (Recommended for production)
# SENDGRID_API_KEY=your_sendgrid_api_key_here

# Option 2: Gmail (Requires app-specific password)
# GMAIL_USER=your_gmail_address@gmail.com
# GMAIL_PASS=your_app_specific_password

# Option 3: AWS SES
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1

# Option 4: Postmark
# POSTMARK_API_KEY=your_postmark_api_key

# Option 5: Custom SMTP
# SMTP_HOST=smtp.your-email-provider.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your_smtp_username
# SMTP_PASS=your_smtp_password

# Security
# Add any additional security configurations here

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# File Upload
MAX_FILE_SIZE=10485760
